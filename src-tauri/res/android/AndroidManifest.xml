<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
      This is a manifest merger file. It will be merged with the manifest
      generated by the Tauri build process.

      We only need to declare the permissions we require.
    -->

    <!-- "Normal" permission for the native Android Visualizer API (system audio loopback) -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- "Dangerous" permission for cpal to access microphones -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
</manifest>